<% provide(:title, 'Regístrese') %>
<h1>Regístrese</h1>

<div class="row">
  <div class="span6 offset3">
    <%= render 'shared/error_messages' %>
    <%= form_for(@user) do |f| %>

      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name , :placeholder =>"Juan Pérez" %>

      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email , :placeholder => "juan.perez@dominio.com"  %>
      
      <%= f.label :password, "Contraseña" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmar contraseña" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Crear una cuenta", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

