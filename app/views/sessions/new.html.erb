<% provide(:title, 'Ingresar') %>
<h1>Ingresar</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email , :placeholder => "juan.perez@dominio.com"  %>

      <%= f.label :password, "Contraseña" %>
      <%= f.password_field :password %>

      <%= f.submit "Ingresar", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>No tiene usuario registrado? <%= link_to raw("Regístrese ahora &raquo;"), signup_path %></p>
  </div>
</div>
