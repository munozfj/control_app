    <link rel="apple-touch-icon" sizes="114x114" href="/assets/app-icon-128.png" />
    
    <title> <%= full_title(yield(:title)) %> </title>
    
    <%= stylesheet_link_tag    "application", media: "all" %>
    
    <%= render 'layouts/shim'  %>
    
  </head>
  <body>
  
    <%= render 'layouts/header'  %>
    
    <div class="container">
      <% flash.each do |key, value| %>
